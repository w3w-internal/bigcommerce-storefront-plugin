{
  "extends": "./node_modules/gts/tsconfig-google.json",
  "compilerOptions": {
    "baseUrl": ".",
    "esModuleInterop": true,
    "lib": ["es6", "es7", "esnext"],
    "strict": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "dist",
    "skipLibCheck": true,
    "target": "es6",
    "paths": {
      "@/*": ["src/*"]
    },
    "allowJs": false,
    "noEmit": true,
    "incremental": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "removeComments": true
  },
  "include": ["src/**/*", "__tests__/**/*"],
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}
